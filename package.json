{
  "name": "npm-rollup-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for creating npm libraries using rollup",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/index.js",
  "files": [
    "src",
    "dist/*.js"
  ],
  "scripts": {
    "clean": "rimraf *.log dist coverage",
    "build:production": "npm run clean && npm run lint && npm run test && npm run build",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir dist/cjs",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir dist/esm",
    "build:umd": "cross-env BABEL_ENV=es NODE_ENV=development rollup -c -i src/index.js -o dist/index.js",
    "build:umd:min": "cross-env BABEL_ENV=es NODE_ENV=production rollup -c -i src/index.js -o dist/index.min.js",
    "build": "npm run clean && npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "watch": "cross-env BABEL_ENV=es rollup -c -w",
    "test": "cross-env BABEL_ENV=commonjs jest",
    "test:watch": "npm test -- --watchAll",
    "test:coverage": "npm test -- --coverage",
    "lint": "eslint src examples test",
    "lint:fix": "eslint --fix src examples test",
    "examples:lint": "eslint examples",
    "examples:lint:fix": "eslint examples --fix",
    "examples:test": "cross-env CI=true babel-node examples/testAll.js"
  },
  "author": "Asa Cristall Fam√°",
  "license": "MIT",
  "homepage": "https://github.com/asa-cristall-fama/npm-rollup-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asa-cristall-fama/npm-rollup-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/asa-cristall-fama/npm-rollup-boilerplate/issues"
  },
  "keywords": [
    "boilerplate",
    "browser",
    "bundle",
    "es6",
    "npm",
    "jest",
    "modules",
    "react",
    "rollup"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "eslint": "^4.6.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "jest": "^20.0.4",
    "rimraf": "^2.6.1",
    "rollup": "^0.49.3",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.3.1"
  },
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  }
}
